<h1>Edit my listing:</h1>
<hr>
<br>
<%= simple_form_for @equipment do |f| %>
  <%= f.input :name %>
  <%= f.input :category_id, collection: Category.all, label_method: :name, value_method: :id,label: "Category", include_blank: true %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.input :price, as: :numeric %>
  <%= f.submit %>
<% end %>
<%= link_to "Cancel", admin_index_path %>
