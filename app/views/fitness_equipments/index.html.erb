<div class="header-container text-center">
  <h1><strong>All Equipments</strong></h1>
</div>

<h3>Categories: </h3>
<% @categories.each do |category| %>
  <%= category.name %>
<% end %>

<div class="container">
  <div class="row">
    <% @equipments.each do |equipment| %>
    <div class="col-sm-3 m-3">
      <div class="card" style="width: 18rem;">
        <img src="https://media.istockphoto.com/photos/jump-rope-picture-id481079317?k=6&m=481079317&s=612x612&w=0&h=iYZLfBLS8ESHAwLPM1QdkmgMeu_rpiTGCvV0z2oyg_Y=" class="card-img-top" alt="Jumping Ropes">
        <div class="card-body">
          <h4 class="card-title"> Name: <%= equipment.name %> </h4>
          <p class="card-text"> Description: <%= equipment.description %>  </p>
          <p class="card-text"> Category: <%= Category.find(equipment.category_id).name %>  </p>
          <i class="fa-solid fa-people-roof"> </i> available:  <%= equipment.available %> </p>
          <p><i class="fa-solid fa-euro-sign"></i> price <%= equipment.price %> </p>
          <p><i class="fa-solid fa-euro-sign"></i> owned by <%= User.find(equipment.user_id).first_name %> </p>
          <p><i class="fa-solid fa-euro-sign"></i> address <%= User.find(equipment.user_id).address %> </p>
          <p><i class="fa-solid fa-euro-sign"></i> district <%= User.find(equipment.user_id).district %> </p>
          <div class="card-buttons">
            <%= link_to fitness_equipment_path(equipment), class:"text-decoration-none" do %>
              <a href="#" class="d-inline btn btn-warning">More details</a>
              <a href="#" class="d-inline btn btn-warning">Book now</a>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
