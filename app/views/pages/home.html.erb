<div class="top-picks-title">
  <h2>Top equipments booked as at :
    <%# <span style="text-decoration: underline wavy rgb(0, 123, 74); text-underline-offset: 0.5em;" > %>
    <%# <span class="wavy-styling" > %>
    <strong><%= Date.today.strftime("%d %B") %></strong>
    </span>
  </h2>
</div>
<div class="d-flex justify-content-around" >
  <%  @top_equipments.each do |equipment| %>
  <div class="container-home">
    <div class="col-4">
      <div class="card-home">
        <div class="card-img-fitness">
          <%= cl_image_tag equipment.photo.key, height: 180, width: 180, crop: :fit if equipment.photo.attached? %>
        </div>
        <div class="card-body-fitness">
          <h3 class="card-title"><%= equipment.name    %></h3>
          <p class="card-text"><%= equipment.booking_count %> equipment(s) booked </p>
          <% if user_signed_in? %>
            <% if equipment.user_id == current_user.id %>
                <h4>Your listed equipments</h4>
            <% else %>
               <%= link_to "Have a look at this equipment", fitness_equipments_path(query: equipment.name),class:"btn btn-warning"%>
             <% end %>
            <% else %>
              <%= link_to "Have a look at this equipment", fitness_equipments_path(query: equipment.name),class:"btn btn-warning"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

